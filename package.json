{
  "name": "agelum",
  "private": true,
  "scripts": {
    "clean": "turbo run clean",
    "build": "turbo run build",
    "build:ai-gateway": "turbo run build --filter=ai-gateway...",
    "build:agelum": "turbo run build --filter=agelum...",
    "build:agelum:prod": "NODE_ENV=production turbo run build --filter=agelum...",
    "build:drizzle-reactive": "turbo run build --filter=@drizzle/reactive...",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e --filter=agelum...",
    "test:e2e:ui": "turbo run test:e2e:ui --filter=agelum...",
    "test:e2e:headed": "turbo run test:e2e:headed --filter=agelum...",
    "playwright:install": "turbo run playwright:install --filter=agelum...",
    "prune:site": "turbo prune --scope=site --docker",
    "dev": "turbo run dev",
    "dev:landing": "turbo run dev --filter=landing-page...",
    "dev:agelum": "turbo run dev --filter=agelum...",
    "dev:ux": "turbo run dev --filter=@agelum/ux-core-test-server...",
    "start": "turbo run start",
    "start:agelum": "turbo run start --filter=agelum...",
    "types": "turbo run types",
    "prettier-fix": "prettier --write ."
  },
  "devDependencies": {
    "@million/lint": "^1.0.11",
    "husky": "^8.0.3",
    "prettier": "^2.8.4",
    "turbo": "^2.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "turbo run lint"
    }
  },
  "packageManager": "pnpm@10.11.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
