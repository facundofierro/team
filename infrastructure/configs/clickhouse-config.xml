<?xml version="1.0"?>
<clickhouse>
    <!-- PostHog specific configuration -->
    <profiles>
        <default>
            <max_memory_usage>10000000000</max_memory_usage>
            <use_uncompressed_cache>0</use_uncompressed_cache>
            <load_balancing>random</load_balancing>
        </default>
    </profiles>

    <!-- Users and access -->
    <users>
        <posthog>
            <password>${POSTHOG_CLICKHOUSE_PASSWORD}</password>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
            <access_management>1</access_management>
        </posthog>
    </users>

    <!-- Quotas -->
    <quotas>
        <default>
            <interval>
                <duration>3600</duration>
                <queries>1000</queries>
                <errors>100</errors>
                <result_rows>1000000</result_rows>
                <read_rows>100000000</read_rows>
                <execution_time>3600</execution_time>
            </interval>
        </default>
    </quotas>

    <!-- Cluster configuration for PostHog (simplified for single-node setup) -->
    <remote_servers>
        <!-- Empty for single-node setup -->
    </remote_servers>

    <!-- Macros for distributed tables (simplified) -->
    <macros>
        <shard>01</shard>
        <replica>01</replica>
    </macros>

    <!-- Zookeeper configuration (commented out for single-node setup) -->
    <!-- <zookeeper>
        <node>
            <host>zookeeper</host>
            <port>2181</port>
        </node>
    </zookeeper> -->

    <!-- Storage configuration -->
    <storage_configuration>
        <disks>
            <default>
                <path>/var/lib/clickhouse/</path>
            </default>
        </disks>
        <policies>
            <default>
                <volumes>
                    <main>
                        <disk>default</disk>
                    </main>
                </volumes>
            </default>
        </policies>
    </storage_configuration>
</clickhouse>
